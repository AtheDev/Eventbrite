<html>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>
          <%= form_tag url_for(action: 'create'), method: "post" do %>
          <h1 class="h3 mb-3 font-weight-normal text-center">New Event</h1>
          <div class="form-group">
            <%= label_tag 'Titre' %>
            <%= text_field_tag 'title', @event.title, {class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= label_tag 'Description' %>
            <%= text_area_tag 'description', @event.description, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Localisation' %>
            <%= text_area_tag 'location', @event.location, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Prix' %>
            <%= text_area_tag 'price', @event.price, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'Date' %>
            <%= text_area_tag 'start_date', @event.start_date, {class: 'form-control'} %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag 'DurÃ©e' %>
            <%= text_area_tag 'duration', @event.duration, {class: 'form-control'} %>
          </div>
            <br />
          <div class="actions mt-5">
            <%= submit_tag "Create Event", {class:'btn btn-primary'} %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>